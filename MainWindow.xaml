<Window x:Class="ExportExt3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ext3 SD Card Exporter"
        Height="560"
        Width="960"
        MinHeight="480"
        MinWidth="760"
        Background="{StaticResource WindowBackgroundBrush}"
        Foreground="#FF111926">
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="0,0,0,6">
                <Border Width="48"
                        Height="48"
                        CornerRadius="14"
                        Background="{StaticResource CardBackgroundBrush}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource GlyphTextStyle}"
                               Text="&#xE957;"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="26" />
                </Border>
                <StackPanel Margin="14,0,0,0">
                    <TextBlock Text="Ext3 SD Card Exporter"
                               FontSize="24"
                               FontWeight="Bold" />
                    <TextBlock Text="Mount Linux partitions from SD cards and export their contents safely."
                               Foreground="{StaticResource MutedForegroundBrush}" />
                </StackPanel>
            </StackPanel>
            <TextBlock Text="Select a removable device, pick the destination folder, and start the Metro-inspired export experience."
                       Foreground="{StaticResource MutedForegroundBrush}" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Style="{StaticResource CardStyle}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,0,12">
                        <TextBlock Style="{StaticResource GlyphTextStyle}"
                                   Text="&#xEDA2;"
                                   Margin="0,0,12,0"
                                   FontSize="22" />
                        <StackPanel>
                            <TextBlock Text="Detected removable disks"
                                       FontSize="18"
                                       FontWeight="SemiBold" />
                            <TextBlock Text="Drives that look like SD cards, USB readers, or Linux media."
                                       Foreground="{StaticResource MutedForegroundBrush}"
                                       FontSize="12" />
                        </StackPanel>
                    </StackPanel>

                    <ComboBox ItemsSource="{Binding Disks}"
                              SelectedItem="{Binding SelectedDisk, Mode=TwoWay}"
                              DisplayMemberPath="FriendlyName"
                              IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                              Margin="0,0,0,10"
                              Height="36" />

                    <Button Click="RefreshClicked"
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                            Margin="0,0,0,18">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Style="{StaticResource GlyphTextStyle}"
                                       Text="&#xE72C;"
                                       FontSize="16"
                                       Margin="0,0,8,0" />
                            <TextBlock Text="Refresh devices" />
                        </StackPanel>
                    </Button>

                    <TextBlock Text="Partitions"
                               FontWeight="SemiBold"
                               FontSize="16"
                               Margin="0,0,0,6" />

                    <ListBox ItemsSource="{Binding AvailablePartitions}"
                             SelectedItem="{Binding SelectedPartition, Mode=TwoWay}"
                             Height="280"
                             BorderThickness="0"
                             Background="#FFF7F9FC"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="0,0,0,10" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="12"
                                                    Padding="14"
                                                    SnapsToDevicePixels="True">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#E5F1FF" />
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#FFF0F4FF" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource GlyphTextStyle}"
                                               Text="&#xE8B7;"
                                               FontSize="20"
                                               Margin="0,0,12,0" />
                                    <StackPanel>
                                        <TextBlock Text="{Binding DisplayName}"
                                                   FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding PartitionType}"
                                                   FontSize="12"
                                                   Foreground="{StaticResource MutedForegroundBrush}" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                    Style="{StaticResource CardStyle}"
                    Margin="24,0,0,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,12">
                        <TextBlock Style="{StaticResource GlyphTextStyle}"
                                   Text="&#xE7C3;"
                                   Margin="0,0,12,0" />
                        <StackPanel>
                            <TextBlock Text="Destination"
                                       FontSize="18"
                                       FontWeight="SemiBold" />
                            <TextBlock Text="Windows folder where files will be exported."
                                       Foreground="{StaticResource MutedForegroundBrush}"
                                       FontSize="12" />
                        </StackPanel>
                    </StackPanel>

                    <Border Background="#FFF9FAFB"
                            BorderBrush="{StaticResource InputBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="4"
                            Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding DestinationFolder}"
                                     IsReadOnly="True"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Margin="4,0,12,0"
                                     VerticalContentAlignment="Center" />
                            <Button Grid.Column="1"
                                    Click="BrowseClicked"
                                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                                    Width="120">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Style="{StaticResource GlyphTextStyle}"
                                               Text="&#xE8B7;"
                                               FontSize="16"
                                               Margin="0,0,8,0" />
                                    <TextBlock Text="Browse" />
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>

                    <Border Background="#FFF2FBF7"
                            BorderBrush="#FFD5F2E3"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="12"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource GlyphTextStyle}"
                                           Text="&#xE946;"
                                           FontSize="16"
                                           Margin="0,0,8,0"
                                           Foreground="#FF2BB673" />
                                <TextBlock Text="Read-only export"
                                           FontWeight="SemiBold" />
                            </StackPanel>
                            <TextBlock Text="The SD card is never modified; files are copied byte-for-byte into your chosen folder."
                                       TextWrapping="Wrap"
                                       Margin="0,6,0,0"
                                       Foreground="{StaticResource MutedForegroundBrush}" />
                        </StackPanel>
                    </Border>

                    <Button Style="{StaticResource PrimaryButtonStyle}"
                            Height="48"
                            Click="ExportClicked"
                            IsEnabled="{Binding CanExport}">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <TextBlock Style="{StaticResource GlyphTextStyle}"
                                       Text="&#xE74C;"
                                       FontSize="18"
                                       Margin="0,0,10,0"
                                       Foreground="White" />
                            <TextBlock Text="Export files" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2"
                Background="{StaticResource CardBackgroundBrush}"
                CornerRadius="12"
                Padding="16"
                Margin="0,24,0,12">
            <StackPanel>
                <TextBlock Text="Progress"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8" />
                <ProgressBar Minimum="0"
                             Maximum="100"
                             Value="{Binding ProgressValue}"
                             IsIndeterminate="{Binding IsProgressIndeterminate}" />
            </StackPanel>
        </Border>

        <TextBlock Grid.Row="3"
                   Text="{Binding StatusMessage}"
                   Foreground="{StaticResource MutedForegroundBrush}"
                   FontStyle="Italic" />
    </Grid>
</Window>
